{% include 'includes/navbar.twig' %}

{% for product in products %}

    <div class="w3-quarter col-md-3 ">
        <img src="/{{ product.profile_picture }}" alt="" style="width:200px; height:247px">
        <h3>{{ product.name }}</h3>
        <p>{{ product.description }}</p>
        <form method="post" action="{{ path_for('cart.destroy') }}">
            <input type="hidden" name="product" value="{{ product.id }}">
            <input type="submit" name="add_to_cart" style="text-align: center" class="btn btn-danger"
                   style="float:left; margin-bottom:8px;"
                   value="Remove from Cart"/>
        </form>
    </div>

{% endfor %}

{% if products is empty %}
    <h1>No products added in your shopping cart</h1>
{% endif %}